# Bowa Backend - Produktions-Umgebungskonfiguration
# Diese Datei sollte nach dem Deployment angepasst werden

# Anwendungsumgebung
APP_ENV=production
PORT=3000

# Superadmin-Anmeldedaten (BITTE ÄNDERN!)
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=secure_password_here

# Cookie-Geheimnis (BITTE ÄNDERN!)
COOKIE_SECRET=your_cookie_secret_here

# Domain-Konfiguration
DOMAIN=yourdomain.com

# Asset-URLs (wird automatisch von vendure-config.ts verwendet)
ASSET_URL_PREFIX=https://api.yourdomain.com/assets/

# E-Mail-Konfiguration
EMAIL_FROM_ADDRESS="Bowa Shop" <noreply@yourdomain.com>
EMAIL_VERIFY_URL=https://yourdomain.com/verify
EMAIL_PASSWORD_RESET_URL=https://yourdomain.com/password-reset
EMAIL_CHANGE_EMAIL_URL=https://yourdomain.com/verify-email-address-change

# Datenbank (SQLite für Entwicklung, für Produktion PostgreSQL empfohlen)
DATABASE_TYPE=better-sqlite3
DATABASE_PATH=./vendure.sqlite

# Logging
LOG_LEVEL=warn 